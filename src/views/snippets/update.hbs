<div class="snippets-container-new text-center mx-auto">
  {{#if infoToSend}}
  <form action="/snippets/update/{{id}}?_method=PUT" method="post">
    <div class="form-group">
      <h2 class="text-light"><strong>{{user}}</strong></h2>
      <h3 name="snippetNameUpdate">{{infoToSend.name}}</h3>
    </div>
    <div class="form-group">
      <textarea class="form-control bg-dark text-light" id="snippetTextAreaInput"
        name="snippetContentUpdate">{{infoToSend.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
  </form>
  {{/if}}
</div>