<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand font-italic" href="./">CRUD-Snippets</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        {{#if authorizedUser}}
        <div class="nav-item dropdown">
          <a href="./snippets" class="nav-link dropdown-toggle" data-toggle="dropdown">Snippets</a>
          <div class="dropdown-menu">
            <a href="./snippets/new" class="dropdown-item">Create new</a>
            <a href="./" class="dropdown-item">Overview</a>
          </div>
        </div>
        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="./snippets">Snippets</a>
        </li>
        {{/if}}
        {{#unless authorizedUser}}
        <li class="nav-item">
          <a class="nav-link" href="./login">Login</a>
        </li>
        {{/unless}}
      </ul>
    </div>
    {{#if authorizedUser}}
    <form class="float-right" action="./logout" method="post">
      <p class="text-light float-left mr-3 mt-2">Logged in as, {{user}}</p>
      <button class="btn btn-warning">Logout</button>
    </form>
    {{/if}}
  </nav>
</header>